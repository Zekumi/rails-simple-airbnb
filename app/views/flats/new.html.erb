        <h1 class="addflat">Add a new flat</h1>

<div class="container">
  <div class="row">
    <div class="col">
      <%= simple_form_for @flat do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :description%>
        <%= f.input :price_per_night %>
        <%= f.input :number_of_guests %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
